@using Eticaret.Models;
@model IEnumerable<ProductModel>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/upload/@item.Image" alt="@item.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@item.Id">@item.Name</a>
                    </h4>
                    <p class="card-text description" pt-2>
                    @item.Description
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        @item.Price.ToString("c")
                    </small>
                    <a href="/Home/Details/@item.Id" class="btn btn-default btn-sm float-right">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        ürünü incele
                    </a>
                </div>
            </div>
        </div>
    }

</div>