@model IEnumerable<Eticaret2.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-9">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />
            @if (Model.Count() != 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Sipariş Numarası</th>
                            <th>Sipariş Tarihi</th>
                            <th>Ücret</th>
                            <th>Sipariş durumu</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderNumber</td>
                                <td>@item.OrderDate.ToShortDateString()</td>
                                <td>@item.Total.ToString("c")</td>
                                <td>@item.OrderState</td>
                                <td>
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("İade Et", "Return", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Siparişiniz bulunmamakta.
                </div>
            }
        </div>
    </div>
</div>
